<div class="container">
  <div class="row d-flex justify-content-center" style='margin-top: 50px'>

    <div class="col-12 clearfix mb-3">
      <div class="float-right"><%= link_to 'ねこちゃんを新規登録する', new_owner_cat_path, class: 'btn btn-sm btn-outline-secondary' %></div>
    </div>

    <% @cats.each do |cat| %>
      <div class="col-md-4">
        <div class='card card-columns mb-4 shadow-sm'>
          <div class="bd-placeholder-img card-img-top">
            <%= image_tag cat.get_cat_image, class: "img-fluid" %>
          </div>
          <div class="card-body">
            <h4><%= cat.name %></h4>
            <p class="card-text text-truncate">
              <p><%= cat.gender_i18n %> | <%= cat.feature_i18n %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to '編集', edit_owner_cat_path(cat.id), class: "btn btn-sm btn-outline-secondary"%>
                <%= link_to '卒業', owner_cat_path(cat.id), method: :delete, class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to '詳細', owner_cat_path(cat.id), class: 'btn btn-sm btn-outline-secondary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>