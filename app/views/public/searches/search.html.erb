
<% if @model == "shop" %>
  <% if @records.present? %>
  <div class="container">
  <h1 class="text-center">SHOPS SEARCH FOR "<%= @keyword %>"</h1>
    <div class="row d-flex justify-content-center">
      <% @records.each do |shop| %>
        <div class="col-md-8">
          <%= link_to shop_path(shop.id), class: "text-reset text-decoration-none" do %>
            <div class='row position-relative justify-content-center round-all bg-white mt-5 pt-4'>
              <%= render 'public/shops/shop', shop: shop %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-5"><%= paginate @records %></div>
  <% else %>
    <h3 class="text-center m-5">一致する店舗はありません</h3>
  <% end %>
  </div>

<% elsif @model == "photo" %>
  <% if @records.present? %>
  <div class="container">
  <h1 class="text-center mb-5">PHOTO SEARCH FOR "<%= @keyword %>"</h1>
    <div class="row d-flex justify-content-center">
      <% @records.each do |photo| %>
        <div class="col-md-4">
          <%= link_to photo_path(photo.id), class: "text-decoration-none text-reset" do %>
            <%= render "public/photos/photo", photo: photo %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-5"><%= paginate @records %></div>
  <% else %>
    <h3 class="text-center m-5">一致する投稿はありません</h3>
  <% end %>
  </div>
<% end %>

<div class="container">
  <% if @cats.present? %>
  <div class="row d-flex justify-content-center align-items-center">
    <% @cats.each do |cat| %>

        <div class="col-md-4">
          <%= render "public/cats/cat", cat: cat %>
        </div>

    <% end %>
    </div>
  <% end %>
</div>

