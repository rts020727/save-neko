<div class="container">
  <h1 class="text-center">ねこの日常　詳細</h1>

  <div class="row d-flex justify-content-center" style="margin-top: 50px">
    <div class="col-md-6">
      <div class="card mb-4 shadow-sm">
        <div class="bd-placeholder-img card-img-top">
          <%= image_tag @photo.get_image, class: "img-fluid img" %>
        </div>
        <div class="card-body m-2">
          <h4><%= @photo.title %></h4>
          <p>店舗名：<span class="h4"><%= link_to @photo.shop.name, shop_path(@photo.shop_id), class: "badge badge-light" %></span>
            <span class=<%= "favorite-btn" + @photo.id.to_s %>><%= render "favorite-btn", photo: @photo %></span>
          </p>
          <p class="card-text text-truncate">
            <%= @photo.content %>
          </p>
          <small>
            <p class="text-center">
              <span class=<%= "comment-count" + @photo.id.to_s %>>コメント数：<%= @photo.comments.count %></span>
              <span class=<%= "favorite-btn-count" + @photo.id.to_s %>>いいね数：<%= @photo.favorites.count %></span>
              <span class="ml-5">
                投稿日：<%= @photo.created_at.strftime("%Y年%m月%d日") %>
              </span>
            </p>
          </small>
        </div>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-7 <%= "comment-index" + @photo.id.to_s %>">
      <%= render "comment", photo: @photo %>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-5">
      <%= form_with model: [@photo, @comment], url: photo_comments_path(@photo), method: :post, local: false do |f| %>
        <%= f.text_area :photo_comment, placeholder: "ぜひコメントしてください！", class: "form-control m-3" %>
        <p class="text-right"><%= f.submit "送信する", class: "btn btn-info" %></p>
      <% end %>
    </div>
  </div>
  <div class="col-12 clearfix">
    <div class="float-right"><%= link_to "一覧へもどる", photos_path, class: "btn btn-sm btn-secondary" %></div>
  </div>

</div>