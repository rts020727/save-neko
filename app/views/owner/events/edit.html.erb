<div class="container">
  <h1 class="mb-5 text-center">- EVENT DETAIL -</h1>
  <%= render "layouts/errors", model: @event %>
  <%= form_with model: @event, url: owner_event_path(@event), method: :patch do |f| %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 bg-white pt-2 round-all">
      
      <table class="table table-borderless">
        <tr>
          <td class="text-right w-25">タイトル：</td>
          <td class="text-left"><%= f.text_field :title, class: "form-control" %></td>
        </tr>
        <tr>
          <td class="text-right">日付：</td>
          <td class="text-left"><%= f.date_select :start_time %></td>
        </tr>
        <tr>
          <td class="text-right">内容：</td>
          <td class="text-left"><%= f.text_area :content, class: "form-control" %></td>
        </tr>
      </table>
    </div>
      <div class="col-md-12 text-center m-5">
        <%= f.submit "編集を保存する", class: "btn btn-secondary m-2" %>
        <%= link_to "イベント一覧へもどる", owner_events_path, class: "btn btn-info m-2" %>
      </div>
  </div>
  <% end %>
</div>