<div class='container-fluid'>
  <div class='row justify-content-center'>
    <div class='col-md-8'>
      <h1 class='mb-5 text-center'>- PHOTO EDIT -</h1>
      <%= form_with model: @photo, url: owner_photo_path(@photo.id), method: :patch do |f| %>
      <div>
        <table class='table text-center table-borderless'>
          <tr>
            <td style='width: 30%'>写真</td>
            <td style='width: 50%'><%= f.file_field :image %></td>
          </tr>
          <tr>
            <td>タイトル</td>
            <td><%= f.text_field :title, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>投稿内容</td>
            <td><%= f.text_area :content, class: 'form-control' %></td>
          </tr>
        </table>
        <% end %>
        <p class="text-center"><%= link_to "編集を保存する", owner_photo_path(@photo.id), class: "btn btn-secondary" %></p>
        <p class="text-right"><%= link_to '一覧へもどる', owner_photos_path, class: 'btn btn-info' %></p>
      </div>
    </div>
  </div>
</div>