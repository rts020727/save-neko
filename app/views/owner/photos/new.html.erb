<div class='container-fluid'>
  <div class='row justify-content-center'>
    <div class='col-md-4'>
      <h3 class='mb-3'>ねこの日常 新規投稿</h3>
      <%= form_with model: @photo, url: owner_photos_path, method: :post do |f| %>
      <div>
        <table class='table text-center table-borderless'>
          <tr>
            <td style='width: 30%'>写真</td>
            <td style='width: 50%'><%= f.file_field :image %></td>
          </tr>
          <tr>
            <td>タイトル</td>
            <td><%= f.text_field :title, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>投稿内容</td>
            <td><%= f.text_area :content, class: 'form-control' %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '投稿する', class: 'btn btn-sm btn-outline-secondary' %></td>
          </tr>
        </table>
        <% end %>
        <div class="col-12 clearfix">
          <div class="float-right"><%= link_to '一覧へもどる', owner_photos_path, class: 'btn btn-sm btn-outline-secondary' %></div>
        </div>
      </div>
    </div>
  </div>
</div>