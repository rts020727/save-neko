<!DOCTYPE html>
<html>
  <head>
    <title>SaveNeko</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/7674a4dd8f.js" crossorigin="anonymous"></script>
    <%= include_gon %>
    <%= stylesheet_pack_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "application", media: "all"%>
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;800&family=Montserrat:wght@900&display=swap" rel="stylesheet">
    </head>
    

  <body>
    <header>
      <%= render "layouts/header" %>
    </header>
    <main>
      <% if alert.present? %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
      <% end %>
      
      <% if notice.present? %>
        <div class="alert alert-info">
          <%= notice %>
        </div>
      <% end %>
      
      <%= yield %>
    </main>
    <footer>
      <%= render "layouts/footer" %>
    </footer>
  </body>
</html>
