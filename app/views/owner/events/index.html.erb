<div class="container-fluid">
  <h1 class="mb-5 text-center">- EVENTS -</h1>
  <%= render "layouts/errors", model: @event %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-3 m-5 p-5 border border-white">
      <h3 class="text-center">新規登録</h3>
      <%= form_with model: @event, url: owner_events_path, method: :post do |f| %>
        <p>タイトル</p>
        <p><%= f.text_field :title, class: "form-control" %></p>
        <p>日付</p>
        <p><%= f.date_select :start_time %></p>
        <p>内容</p>
        <p><%= f.text_area :content, class: "form-control" %></p>
        <p class="text-right m-3"><%= f.submit "イベント投稿する", class: "btn btn-info" %></p>
      <% end %>
    </div>
    <div class="col-md-7">

      <div id="calendar" class="bg-white my-auto p-3">
        <%= render "event_index", events: @events %>
      </div>
      <!--今月のイベント情報-->
      <h5 class="text-center m-3 mt-5">〜 今月のイベント情報 〜</h5>
      <% if @current_month_events.present? %>
        <table class="table d-flex justify-content-center text-center">
          <tr>
            <th>イベント日時</th>
            <th>タイトル</th>
            <th>内容</th>
          </tr>
          <% @current_month_events.each do |event| %>
          <tr>
            <td><%= event.start_time.strftime("%Y 年 %m 月 %d 日") %></td>
            <td><%= event.title %></td>
            <td class="text-left"><%= safe_join(event.content.split("\n"), tag(:br)) %></td>
          </tr>
          <% end %>
        </table>
      <% else %>
        <p class="text-center m-4">今月のイベント情報はありません。</p>
      <% end %>
