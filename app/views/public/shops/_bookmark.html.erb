<% if shop.bookmarked_by?(current_user) %>
  <%= link_to shop_bookmarks_path(shop.id), method: :delete, remote: true , class: "btn btn-info" do %>
    <span class="mr-2">ブックマークを解除する</span><i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to shop_bookmarks_path(shop.id), method: :post, remote: true , class: "btn btn-info" do %>
    <span class="mr-2">ブックマークする</span><i class="far fa-bookmark"></i>
  <% end %>
<% end %>