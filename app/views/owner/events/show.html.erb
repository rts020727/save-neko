<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 bg-white p-5">
      <h1 class="m-3 text-center">イベント詳細情報</h1>
      <table class="table table-borderless">
        <tr>
          <td class="text-right">イベント名　：</td>
          <td class="text-left"><%= @event.title %></td>
        </tr>
        <tr>
          <td class="text-right">日付　　　　：</td>
          <td class="text-left"><%= @event.start_time.strftime("%Y 年 %m 月 %d 日") %></td>
        </tr>
        <tr>
          <td class="text-right">内容　　　　：</td>
          <td class="text-left"><%= @event.content %></td>
        </tr>
      </table>
    </div>
    <%= link_to "イベント一覧へもどる", owner_events_path, class: "btn btn-info" %>
    <%= link_to ""
  </div>
</div>