<div class="container">
  <h1 class="mb-5 text-center">- EVENT DETAIL -</h1>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 bg-white p-5 round-all">
      <table class="table table-borderless">
        <tr>
          <td class="text-right">イベント名：</td>
          <td class="text-left"><%= @event.title %></td>
        </tr>
        <tr>
          <td class="text-right">日付：</td>
          <td class="text-left"><%= @event.start_time.strftime("%Y 年 %m 月 %d 日") %></td>
        </tr>
        <tr>
          <td class="text-right">内容：</td>
          <td class="text-left"><%= safe_join(@event.content.split("\n"), tag(:br)) %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-12 text-center m-5">
      <%= link_to "編集する", edit_owner_event_path, class: "btn btn-secondary mr-5" %>
      <%= link_to "削除する", owner_event_path(@event), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger mr-5 ml-5" %>
      <%= link_to "イベント一覧へもどる", owner_events_path, class: "btn btn-info ml-5" %>
    </div>
  </div>
</div>