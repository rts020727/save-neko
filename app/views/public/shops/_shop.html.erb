<div class="col-md-6 p-m-4 text-center mb-4">
  <h3 class="m-2 btn btn-green"><%= shop.name %></h3>
  <div>
    <%= image_tag shop.get_image(600,400), class: "bd-placeholder-img w-75 rounded m-3" %>
  </div>
</div>
<div class="col-md-6 p-4 pl-md-0 text-left">
  <div class='mt-3'>
    <% if current_page?(shop_path(shop.id)) %>
    <p class="mx-3 text-right <%= "bookmark-btn" + shop.id.to_s %>"><%= render "bookmark", shop: shop %></p>
    <% end %>
    <h5>住所</h5>
    <p class='mx-3'><%= shop.address %></p>
    <h5>電話番号</h5>
    <p class='mx-3'><%= shop.phone_number %></p>
    <h5>営業日</h5>
    <p class='mx-3'><%= shop.opening %></p>
    <h5>定休日</h5>
    <p class='mx-3'><%= shop.closed %></p>
  </div>
</div>
