<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-5">
      <h3 class="mb-5 text-center"><%= @user.name + "さんの詳細情報" %></h3>
      <table class="table">
        <tr>
          <td>ユーザーID</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>登録状況</td>
          <% if @user.is_deleted == false %>
            <td class="text-success">登録中</td>
          <% else %>
            <td class="text-danger">退会済み</td>
          <% end %>
        </tr>
      </table>
      <div class="text-center mt-5">
        <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-secondary mr-5" %>
        <%= link_to "一覧へ戻る", admin_users_path, class: "btn btn-info ml-5" %>
      </div>
    </div>
  </div>
</div>