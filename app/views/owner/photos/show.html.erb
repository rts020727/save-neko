<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 mb-5">
      <h1 class="mb-5 text-center">- PHOTO DETAIL -</h1>
      <div class="card mb-4">
        <div class="bd-placeholder-img card-img-top">
          <%= image_tag @photo.get_image(600,400), class: "img-fluid img" %>
        </div>
        <div class="card-body">
          <h4><%= @photo.title %></h4>
          <p class="card-text">
            <%= safe_join(@photo.content.split("\n"),tag(:br)) %>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to '編集する', edit_owner_photo_path(@photo.id), class: "btn btn-sm btn-outline-secondary"%>
              <%= link_to '削除する', owner_photo_path(@photo.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-sm btn-outline-secondary' %>
            </div>
            <p class="text-right"><small>投稿日：<%= @photo.created_at.strftime('%Y年%m月%d日') %></small></p>
          </div>
        </div>
      </div>
      <h1 class="text-center mt-5">- COMMENTS -</h1>
        <div class="row d-flex justify-content-center">
          <div class="col-md-12 <%= "comment-index" + @photo.id.to_s %>">
            <%= render "owner/photos/comment", photo: @photo %>
          </div>
        </div>
      <div class="col-12">
        <div class="text-right"><%= link_to '一覧へもどる', owner_photos_path, class: "btn btn-info" %></div>
      </div>

    </div>
  </div>
</div>