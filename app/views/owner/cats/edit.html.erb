<div class='container-fluid'>
  <div class='row justify-content-center'>
    <div class='col-md-6'>
      <h1 class='mb-3 text-center'>- CAT EDIT -</h1>
      
      <%= render "layouts/errors", model: @cat %>
      
      <%= form_with model: @cat, url: owner_cat_path(@cat.id), method: :patch do |f| %>
      <div>
        <table class='table text-center table-borderless'>
          <tr>
            <td style='width: 30%'>写真</td>
            <td style='width: 50%'><%= f.file_field :cat_image %></td>
          </tr>
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name, class: 'form-control' %></td>
          </tr>
          <tr>
            <td>性別</td>
            <td><%= f.select :gender, Cat.genders_i18n.invert,{ }, {class: 'form-control'} %></td>
          </tr>
          <tr>
            <td>種類</td>
            <td><%= f.select :feature, Cat.features_i18n.invert,{ }, {class: 'form-control'} %></td>
          </tr>
          <tr>
            <td>紹介文</td>
            <td><%= f.text_area :introduction, class: 'form-control' %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '編集を保存する', class: 'btn btn-sm btn-outline-secondary' %></td>
          </tr>
        </table>
        <% end %>
        <div class="col-12 clearfix">
          <div class="float-right"><%= link_to '一覧へもどる', owner_cats_path, class: 'btn btn-sm btn-outline-secondary' %></div>
        </div>
      </div>
    </div>
  </div>
</div>